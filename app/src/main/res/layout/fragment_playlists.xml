<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:background="@color/background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="48dp">

    <Button
        android:id="@+id/btn_new_playlist"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginBottom="46dp"
        android:background="@drawable/round_background"
        android:fontFamily="@font/ys_display_medium"
        android:lineHeight="16dp"
        android:paddingHorizontal="14dp"
        android:text="@string/new_playlist"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:backgroundTint="@null" />

    <LinearLayout
        android:id="@+id/layout_no_playlists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="48dp"
        android:orientation="vertical"
        tools:visibility="gone">

        <ImageView
            android:id="@+id/iv_no_tracks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_no_tracks" />

        <TextView
            android:id="@+id/tv_no_playlists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center"
            android:text="@string/no_playlists"
            android:textColor="@color/search_item_title"
            android:textSize="19sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPlaylists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/item_playlist" />

</LinearLayout>
